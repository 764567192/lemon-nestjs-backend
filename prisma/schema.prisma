generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AcctType {
  id         BigInt   @id(map: "acct_type_pk") @default(autoincrement())
  type       Int      @db.SmallInt
  icon       String   @db.VarChar(255)
  iconName   String   @map("icon_name") @db.VarChar(255)
  sort       BigInt
  createTime DateTime @map("create_time") @db.Timestamptz(6)
  updateTime DateTime @map("update_time") @db.Timestamptz(6)

  @@unique([type, sort], map: "acct_type_pk2")
  @@map("acct_type")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model LedgerDetail {
  id         BigInt   @id(map: "pk_ledger_detail") @default(autoincrement())
  acctTypeId BigInt   @map("acct_type_id")
  amount     Decimal  @db.Decimal(72, 18)
  remark     String?  @db.VarChar(255)
  createTime DateTime @map("create_time") @db.Timestamptz(6)
  updateTime DateTime @map("update_time") @db.Timestamptz(6)

  @@map("ledger_detail")
}
